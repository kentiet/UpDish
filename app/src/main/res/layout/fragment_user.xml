<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ken.updish.Fragment.UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border_shape_top_header"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/txt_userName"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_signOut"
            android:layout_alignStart="@+id/btn_signOut"
            android:layout_below="@+id/imageView"
            android:text="@string/txt_userName"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_userNameContext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btn_signOut"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="235dp"
            android:text="Mijeong Lee"
            android:textColor="@color/colorMain"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_userEmail"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_userEmailContext"
            android:layout_alignLeft="@+id/btn_signOut"
            android:layout_alignStart="@+id/btn_signOut"
            android:text="@string/txt_userEmail"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_userEmailContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_signOut"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="39dp"
            android:ellipsize="end"
            android:text="lemm39@student.douglascollege.ca"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_signOut"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="111dp"
            android:background="@color/colorMain"
            android:text="@string/btn_signOut"
            android:textColor="@color/colorBg"
            android:textSize="26dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@+id/txt_userNameContext"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:src="@drawable/logo" />
    </RelativeLayout>
</FrameLayout>